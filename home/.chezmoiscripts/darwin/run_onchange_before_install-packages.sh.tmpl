#!/bin/bash
set -eufo pipefail

# Brews
{{ $brews := list
    "chezmoi"
    "curl"
    "git"
    "git-lfs"
    "go"
    "golangci-lint"
    "jq"
    "kubernetes-cli"
    "minikube"
    "volta" 
    "wget"
-}}

# Casks
{{ $casks := list
    "aldente"
    "docker"
    "firefox"
    "google-chrome"
    "visual-studio-code"
-}}

# Cask - Visio
{{ $casks = concat $casks (list
    "slack"
    "microsoft-teams"
) -}}

# Cask - Messaging
{{ $casks = concat $casks (list
    "whatsapp"
    "telegram"
    "signal"
) -}}

# Cask - Tools
{{ $casks = concat $casks (list
    "transmission"
    "vlc"
) -}}

# Load Homebrew
command -v brew >/dev/null 2>&1 || \
    echo '🐚 Loading Homebrew' && eval "$(/opt/homebrew/bin/brew shellenv)"

# Install with brew bundle
brew bundle --no-lock --file=/dev/stdin <<EOF
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end -}}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
EOF
