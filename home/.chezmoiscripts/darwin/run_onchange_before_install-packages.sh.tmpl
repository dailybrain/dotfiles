#!/bin/bash
set -eufo pipefail

# Brews
{{ $brews := list
    "chezmoi"
    "curl"
    "git"
    "git-lfs"
    "go"
    "golangci-lint"
    "jq"
    "kubernetes-cli"
    "minikube"
    "wget" 
-}}

# Casks
{{ $casks := list
    "aldente"
    "docker"
    "firefox"
    "google-chrome"
    "microsoft-teams"
    "visual-studio-code"
    "vlc"
-}}

# Load Homebrew
command -v brew >/dev/null 2>&1 || \
    echo 'ğŸš Loading Homebrew' && eval "$(/opt/homebrew/bin/brew shellenv)"

# Install with brew bundle
brew bundle --no-lock --file=/dev/stdin <<EOF
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end -}}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
EOF
